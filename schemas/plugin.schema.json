{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Plugin Manifest",
  "description": "Schema for .claude-plugin/plugin.json â€” plugin metadata and entry points",
  "type": "object",
  "required": ["name", "version", "description"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Plugin short name (lowercase, no spaces)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+",
      "description": "Semver version string"
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["name"]
    },
    "homepage": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" }
    },
    "commands": {
      "type": "string",
      "description": "Path to commands directory"
    },
    "hooks": {
      "type": "string",
      "description": "Path to hooks directory"
    }
  }
}
